div.text-center
  div(id="logo") 
  h1(id="form-title") Sign In To PlanHammer

div.form-center
  form(class="user-form form-horizontal padder", role="form", name="userForm", ng-submit="login(user, userForm)", form-autofill-fix)
    div(class="form-group", ng-show="message")
      div(class="alert alert-{{ message.type }}") {{ message.text }}
    div.form-group
      label(for="inputEmail1", class="control-label") Username
      div
        input(type="text", required, ng-model="user.username", class="form-control", id="inputEmail1", placeholder="Enter a Username")
    div.form-group
      label(for="inputPassword1", class="control-label") Password
      div
        input(type="password", required, ng-model="user.password", class="form-control", id="inputPassword1", placeholder="Password")
    div.form-group
      div
        button(type="submit", class="btn btn-info") Sign in
        a(href="/#/signup", class="btn btn-default pull-right") Create an Account
    div.form-group.signup-buttons
      div
        a(href="/auth/google", id="connect-google") Sign In With Google
      #reset
        a(href="/#/reset") Reset Password
    
