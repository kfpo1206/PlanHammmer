  body
    div.text-center 
      div(id="logo")
      h1(id="form-title") Reset Password
    br

    div(class="form-center", ng-controller="UserResetController")
      form(class="user-form form-horizontal padder", role="form", name="resetForm")
        div(class="form-group", ng-show="message")
          div(class="alert alert-{{ message.type }}") {{ message.text }}   <br/>

        div.form-group
          div
            input.form-control(type="password", required, ng-model="password", placeholder="New Password")
        div.form-group  
