            input.form-control(type="password", required, ng-model="password2", placeholder="Password Again")
              
        div.form-group.signup-buttons
          button(type="submit", class="btn btn-info", ng-click="completeReset(password, password2)", ng-disabled="userForm.$resetForm") Reset

